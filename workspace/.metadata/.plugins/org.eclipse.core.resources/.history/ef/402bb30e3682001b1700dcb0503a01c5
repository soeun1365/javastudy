package quiz04;

public class Book {

	String name;
	String writter;
	int price;
	
	void set(String t1, String w1, int p1) {
		name = t1;
		writter = w1;
		price = p1;
	}
	void set(String t2, String w2) {
		name = t2;
		writter = w2;
	}
	void set(String t3, int p3) {
		name = t3;

		price = p3;
	}
	
	void info(String t, String w, int p) {
		System.out.println("제목: " + name + ", 저자: " + writter + ", 가격: " + price);
	}
	
	void info(String t, String w) {
		System.out.println("제목: " + name + ", 저자: " + writter);
	}
	
	void info(String t, int p) {
		System.out.println("제목: " + name + ", 가격: " + price);
	}
}
