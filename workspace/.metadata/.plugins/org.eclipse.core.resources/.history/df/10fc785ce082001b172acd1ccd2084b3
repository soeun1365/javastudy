package quiz02;

public class Circle {

	//field
	private Coord center;
	private double radius;
	
	public Circle(Coord center, double radius) {
		this.center = Coord(center);
		this.radius = radius;
	}
	double getArea() {
		return Math.PI * Math.pow(radius, 2);
	}
	public void info() {
		System.out.println("중심좌표 [" + center + "], 반지름: " + radius + ", 넓이: " + getArea());
	}
}
