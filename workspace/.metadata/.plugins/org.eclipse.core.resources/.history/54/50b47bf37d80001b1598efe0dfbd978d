package ex01_array;
//String[] friendList = {"타요", "짱구", "스폰지밥"};
//새로 사귄 친구의 수를 입력 받아서,
//그 만큼 , friendList 배열의 길이를 늘이기

import java.util.Scanner;

public class Quiz02 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		String[] friendList = {"타요", "짱구", "스폰지밥"};
		
		System.out.print("새로 사귄 친구의 수를 입력하세요>>> ");
		int num = sc.nextInt();
		String[] newfriendList = new String[num + friendList.length];
		
		for(int i=0 ; i<friendList.length ; i++) {
			newfriendList[i] = friendList[i];
		}
	
		System.out.println(newfriendList.length);
		System.out.println();
			
			for(int i=0 ; i<newfriendList.length ; i++) {
				System.out.println(newfriendList[i]);
			}
	}

}
