package ex01_array;
//성적관리 프로그램
//학생들의 점수를 입력받아서
// 평균, 최대, 최소 점수를 출력한다.

import java.util.Scanner;

public class Quiz03 {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		String[] students = {"타요", "브레드", "스폰지밥", "짱구", "구하리"};
		int[] scores = new int[students.length];
		
		
				
		for(int i = 0 ; i< scores.length ; i++) {
			System.out.print(students[i] + "점수를 입력하세요>>> ");
			scores[i] = sc.nextInt();
		}
		int sum_score = scores[0]; 
		int max_score = 0;
		int min_score = 0;
		
		for(int i = 0 ; i< scores.length ; i++) {
			sum_score = sum_score + scores[i];
		}
		
		for(int i = 0 ; i<= scores.length ; i++) {
			max_score = scores[i] < scores[i+1] ? max_score : scores[i+1];
				}
			}
		
		System.out.println("학생들의 점수 평균: "+ sum_score/scores.length);
		System.out.println("최대 점수: "+ max_score);

	}

}
