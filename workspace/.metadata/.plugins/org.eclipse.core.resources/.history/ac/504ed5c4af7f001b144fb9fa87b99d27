package ex02_loop;

import java.util.Scanner;

public class Quiz02 {

	public static void main(String[] args) {
		
		// 영화 평점을 입력받아서 별(★)을 출력
		// 평점은 1~5 사이의 정수이고, 잘못된 평점은 다시 입력처리

		Scanner sc = new Scanner(System.in);
		int grade = 0;
		do {
			System.out.print("영화 평점 입력(소수점 없이)>>> ");
			grade = sc.nextInt();	
		}while(grade<1 || grade>5);
		
		for(int i=0 ; i< grade ; i++) {
			System.out.print("★");
		}
		
		
	}

}
